{
  "enabled": true,
  "name": "Test Hook",
  "description": "Simple test hook to verify hook system is working",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "*.md"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "This is a test hook that was triggered by editing a markdown file. If you see this message, the hook system is working correctly."
  }
}